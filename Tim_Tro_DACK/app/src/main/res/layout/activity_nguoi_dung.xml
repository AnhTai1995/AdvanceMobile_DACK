<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:fillViewport="true">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">


        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--head: avatar, name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--https://github.com/Pkmmte/CircularImageView-->
                <com.pkmmte.view.CircularImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="4dp"
                    app:shadow="true" />

                <!--name-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="23dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Tài đẹp trai" />

                </LinearLayout><!--name-->
            </LinearLayout><!--head: avatar, name-->

            <View
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/SplitLine_hor0"
                android:layout_width="280dp"
                android:layout_height="0.08dp"
                android:background="#848484" />


            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:text="Giới tính:"
                    android:layout_marginLeft="40dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:textSize="19dp"
                    android:text="Nam"
                    android:id="@+id/tvgioitinh"
                    android:paddingLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:text="Email:"
                    android:layout_marginLeft="40dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:textSize="19dp"
                    android:text="anhtaicute@gmail.com"
                    android:paddingLeft="25dp"
                    android:id="@+id/tvemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:text="Số điện thoại:"
                    android:layout_marginLeft="40dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

                <TextView
                    android:textSize="19dp"
                    android:text="089999999"
                    android:paddingLeft="5dp"
                    android:id="@+id/tvsdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>

            <Button
                android:background="#00AA00"
                android:layout_marginTop="35dp"
                android:text="Quản lý bài đăng"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btquanly" />

            <Button
                android:background="#00AA00"
                android:layout_marginTop="35dp"
                android:text="Danh sách yêu thích"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btquanlyluu" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
