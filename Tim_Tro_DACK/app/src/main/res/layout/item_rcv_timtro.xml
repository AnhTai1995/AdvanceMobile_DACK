<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingTop="8dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/itemCardTimTro"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        >

        <!--item post-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--head: avatar, name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--https://github.com/Pkmmte/CircularImageView-->
                <com.pkmmte.view.CircularImageView
                    android:layout_marginTop="3dp"
                    android:id="@+id/avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar"
                    app:border="true"
                    app:border_color="#EEEEEE"
                    app:border_width="4dp"
                    app:shadow="true" />

                <!--name-->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Ho Ten"
                        />

                    <TextView
                        android:layout_marginLeft="4dp"
                        android:id="@+id/timePost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Thoi gian dang"/>

                </LinearLayout><!--name-->
            </LinearLayout><!--head: avatar, name-->

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dichi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Địa chỉ: "
                    android:paddingLeft="20dp"
                    />

                <TextView
                    android:id="@+id/gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Giá phòng: "
                    android:paddingLeft="20dp"/>

                <TextView
                    android:id="@+id/dientich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Diện tích:"
                    android:paddingLeft="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_marginTop="6dp"
                        android:id="@+id/imgTro"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/nhatro" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >
                <TextView
                    android:paddingLeft="70dp"
                    android:id="@+id/thich"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm vào danh sách yêu thích"
                    android:drawableLeft="@drawable/addheart" />

            </LinearLayout>

        </LinearLayout><!--item post-->
    </android.support.v7.widget.CardView>
</LinearLayout>